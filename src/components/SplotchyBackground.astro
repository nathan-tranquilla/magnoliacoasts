---
export interface Props {
  classes?: string
}
const { classes } = Astro.props
---
<style>
  .card-bg {
    background:
      radial-gradient(circle at 15% 20%, rgba(0,0,0,0.08) 0 9%, transparent 15%),
      radial-gradient(circle at 30% 70%, rgba(0,0,0,0.07) 0 6%, transparent 10%),
      radial-gradient(circle at 50% 15%, rgba(0,0,0,0.09) 0 9%, transparent 15%),
      radial-gradient(circle at 70% 30%, rgba(0,0,0,0.06) 0 5%, transparent 10%),
      radial-gradient(circle at 85% 60%, rgba(0,0,0,0.08) 0 9%, transparent 15%),
      radial-gradient(circle at 80% 85%, rgba(0,0,0,0.07) 0 5%, transparent 10%),
      radial-gradient(circle at 60% 80%, rgba(0,0,0,0.09) 0 9%, transparent 15%),
      radial-gradient(circle at 40% 90%, rgba(0,0,0,0.06) 0 5%, transparent 10%),
      radial-gradient(circle at 20% 80%, rgba(0,0,0,0.08) 0 9%, transparent 15%),
      radial-gradient(circle at 10% 50%, rgba(0,0,0,0.07) 0 5%, transparent 10%),
      radial-gradient(circle at 50% 50%, rgba(0,0,0,0.10) 0 9%, transparent 15%),
      radial-gradient(circle at 85% 15%, rgba(0,0,0,0.06) 0 5%, transparent 10%);
    background-color: var(--color-light-pink);
  }
</style>
<div class={`card-bg flex justify-center ${classes || ''}`}><slot/></div>