---
import { INQUIRE_LINK } from "../data/links"
import Card from "./Card.astro"
import Button from "./Button.astro";

export interface Props {
  title: string,
  details: string[],
  price?: number,
  priceRange?: string,
}
let { title, details, price, priceRange } = Astro.props;

---
<style>
  li::marker {
    color: var(--color-pink);
  }
</style>
<Card test_id={title} classes="w-full max-w-[400px] m-2">
  <h2 class="md:text-lg lg:text-2xl flex justify-center items-center mb-4 font-cormorant-garamond">{title}</h2>
  <slot />
  <ul class="flex flex-col justify-start items-start list-disc list-inside my-2 font-inter">
    {details.map((detail: string) => (
      <li class="text-sm my-[0.25rem] align-middle">{detail}</li>
    ))}
  </ul>
  <div class="flex justify-between items-center h-[62px]">
    <div class="class text-lg font-bold">${price || priceRange} + Tax</div>
    
    <Button color="Pink" classes="w-4/10 h-3/4">
      <a href={INQUIRE_LINK} target="_blank" class="w-full h-full flex justify-center items-center font-cormorant-garamond">Inquire</a>
    </Button>
  </div>
</Card>