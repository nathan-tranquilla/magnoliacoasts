---
import { Image } from 'astro:assets';

import fbIcon from '../assets/FacebookIcon.png'
import instaIcon from '../assets/InstagramIcon.png'
import pintrestIcon from '../assets/PintrestIcon.png'
---
<footer class="font-semibold text-white font-cormorant-garamond bg-pastel-green min-h-[184px] w-screen grid grid-cols-3 grid-rows-3 p-2">
  <div class="pt-4 row-start-1 col-start-1 col-span-1 flex flex-col justify-start items-center">
    Contact Us
  </div>
  <div class="pt-4 row-start-1 col-start-2 col-span-1 flex flex-col justify-start items-center">
    Investment  
  </div>
  <div class="pt-4 row-start-1 col-start-3 col-span-1 flex flex-col justify-start items-center">
    Subscribe
  </div>
  <div class="row-start-2 col-start-1 col-span-3 flex justify-center items-center">
    <Image class="mx-4" src={fbIcon} alt="Facebook Icon" />
    <Image class="mx-4" src={instaIcon} alt="Instagram Icon"/>
    <Image class="mx-4" src={pintrestIcon} alt="Pintrest Icon"/>
  </div>
  <div class="text-sm row-start-3 col-start-1 col-span-1 flex flex-col justify-between items-center">
    <div class="flex flex-col items-start">
      <span>Toronto</span>
      <span>Mississauga</span>
      <span>Oakville</span>
    </div>
  </div>
  <div class="text-sm row-start-3 col-start-2 col-span-1 flex flex-col justify-between items-center">
    <div class="flex flex-col items-start">
      <span>Brampton</span>
      <span>Caledon</span>
      <span>Barrie</span>
    </div>
  </div>
  <div class="text-sm row-start-3 col-start-3 col-span-1 flex flex-col justify-between items-center">
    <div class="flex flex-col items-start">
      <span>Scarborough</span>
      <span>Oshawa</span>
      <span>Whitby</span>
    </div>
  </div>
</footer>