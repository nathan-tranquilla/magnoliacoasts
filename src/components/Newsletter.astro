---
import { Image } from 'astro:assets';
import Button from '../components/Button.astro';
import newsletter from "../assets/Newsletter.png";
import SectionTitle from './SectionTitle.astro';
import Card from './Card.astro';
let subscribeLink = "https://magnoliacoastsphotography.us14.list-manage.com/subscribe?u=4ebfced223d835c48a891029f&id=92c1de656f"
---
<style>
  img {
    object-fit: cover;
    height: 100%;
    width: 100%;
  }
</style>
<div class="flex justify-center py-4">
  <Card classes="grid grid-cols-5 grid-rows-6 gap-4 p-3 sm:max-w-[274px] sm:max-w-[750px]">
    <div class="col-start-1 col-span-2 row-start-1 row-span-6 sm:row-span-6">
      <Image 
        layout="constrained" 
        src={newsletter} 
        alt="Photo of woman on a laptop." 
        widths={[150, 244, 284, 340]}
        sizes="(max-width: 464px) 100vw, 284px"
      />
    </div>
    
    <div class="col-start-3 col-span-3 row-start-3 row-span-2 font-cormorant-garamond md:text-lg sm:text-base text-sm flex flex-col align-start sm:justify-around justify-start">
      <SectionTitle title="Subscribe To Our Newsletter"/>
      <Button color="Mint" classes="self-center" >
        <a href={subscribeLink} target="_blank" class="w-full h-full flex justify-center items-center font-cormorant-garamond">Subscribe</a>
      </Button>
      </a>
    </div>
  </Card>
  
</div>