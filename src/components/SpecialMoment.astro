---
import { Image } from "astro:assets";
export interface Props {
  src: ImageMetadata;
  alt: string;
  buttonText: string;
  link: string;
}
const { src, alt, buttonText, link } = Astro.props;
import Button from "./Button.astro";
import Card from "./Card.astro";
---

<Card classes="max-h-[440px] max-w-[240px] grid grid-cols-1 gap-4">
  <Image src={src} alt={alt} widths={[180]} layout="full-width" quality={100} />
  <Button color="Pink" classes="mx-auto mt-auto">
    <a href={link} class="flex h-full w-full items-center justify-center"
      >{buttonText}</a
    >
  </Button>
</Card>
