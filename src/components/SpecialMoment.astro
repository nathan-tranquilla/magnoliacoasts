---
import { Image } from 'astro:assets';
export interface Props {
  src: ImageMetadata;
  alt: string;
  buttonText: string;
  link: string;
}
const { src, alt, buttonText, link } = Astro.props;
import Button from './Button.astro'
---
<div class="shadow-card max-h-[440px] max-w-[240px] flex flex-col justify-around p-4 grid grid-cols-1 gap-4">
  <Image layout="constrained" src={src} alt={alt} />
  <a href={link}>
    <Button color="Pink" variant="Default" text={buttonText} />
  </a>
</div>