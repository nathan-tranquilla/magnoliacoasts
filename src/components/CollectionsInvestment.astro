---
import { INQUIRE_LINK } from "../data/links"
import Card from "./Card.astro"
import Button from "./Button.astro";

export interface Props {
  title: string,
  detailsCollection: Record<string, Record<string,Array<string>>>,
  price: number,
  priceDetails: string[]
}
let { title, detailsCollection, price, priceDetails } = Astro.props;

---
<style>
  li::marker {
    color: var(--color-pink);
  }
</style>
<Card classes="w-full max-w-[1300px] m-2">
  <h2 class="flex justify-center items-center mb-4 font-cormorant-garamond">{title}</h2>
  <slot />
  <ul class="flex flex-col justify-start items-start list-disc list-inside my-2 font-inter">
    {Object.entries(detailsCollection).map(([key, section]) => (
      <div>{key} <span class="pl-2 font-light text-sm">{section.metadata.join("")}</span></div>
      <ul class="flex flex-col justify-start items-start list-disc list-inside my-2 font-inter">
        {section.details.map((detail: string) => (
          <li class="text-sm my-[0.25rem] align-middle">{detail}</li>
        ))}
      </ul>
    ))}
  </ul>
  <div class="flex justify-between items-center h-[62px]">
    <div class="class text-lg font-bold flex flex-col items-start">
      ${price} + Tax
      {priceDetails.map(detail => (
        <span class="pl-2 font-light text-sm">{detail}</span>
      ))}
    </div>
    <a href={INQUIRE_LINK} target="_blank" class="w-4/10 h-3/4 flex items-center font-cormorant-garamond">
      <Button text="Inquire" color="Pink" variant="Default" />
    </a>
  </div>
</Card>