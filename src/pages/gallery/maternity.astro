---
import Gallery, { GalleryType } from "../../layouts/Gallery.astro"
const images = Object.values(
  import.meta.glob("../../assets/galleries/maternity/*.jpg", { eager: true })
).map((module: any) => module.default) as ImageMetadata[];

const sortByFilename = (a: ImageMetadata, b: ImageMetadata) => {
  // Extract the numeric part from the filename (e.g., '01' from '01.jpg')
  const numA = parseInt(a.src.match(/(\d+)/)?.[0] || '0', 10);
  const numB = parseInt(b.src.match(/(\d+)/)?.[0] || '0', 10);
  return numA - numB;
}
const sortedImages = images.sort(sortByFilename);
---
<Gallery title="Maternity" galleryType={GalleryType.Maternity} images={sortedImages} />